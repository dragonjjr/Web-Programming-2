          <script>
            
            const TongDoanhThuTheoThang = '<%= TongDoanhThuTheoThang %>'.split(',');
            const LabelTongDoanhThuTheoThang ='<%= LabelTongDoanhThuTheoThang %>'.split(',');

            const TongDoanhThuTheoNgay = '<%= TongDoanhThuTheoNgay %>'.split(',');
            const LabelTongDoanhThuTheoNgay ='<%= LabelTongDoanhThuTheoNgay %>'.split(',');

            $(function () {
              /* ChartJS
              * -------
              * Data and config for chartjs
              */
              'use strict';

              // Biểu đồ theo cụm rạp
              var doughnutData = {
                datasets: [{
                  data: [30, 40, 30],
                  backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(153, 102, 255, 0.5)',
                    'rgba(255, 159, 64, 0.5)'
                  ],
                  borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                  ],
                }],

                // These labels appear in the legend and in the tooltips when hovering different arcs
                labels: [
                  'Hồ Chí Minh',
                  'Hà Nội',
                  'Đà Nẵng',
                ]
              };

              var doughnutOptions = {
                responsive: true,
                animation: {
                  animateScale: true,
                  animateRotate: true
                }
              };
              // --------------------------------------

              // Biểu đồ theo phim
              var pieData = {
                datasets: [{
                  data: [30, 40, 30],
                  backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)',
                    'rgba(75, 192, 192, 0.5)',
                    'rgba(153, 102, 255, 0.5)',
                    'rgba(255, 159, 64, 0.5)'
                  ],
                  borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                  ],
                }],

                // These labels appear in the legend and in the tooltips when hovering different arcs
                labels: [
                  'Avengers: Endgame',
                  'Frozen 2',
                  'One Piece',
                ]
              };

              var pieOptions = {
                responsive: true,
                animation: {
                  animateScale: true,
                  animateRotate: true
                }
              };
              // --------------------------------------


              // Data tạm thời của 2 tổng doanh thu
              var dataTongDoanhThuTheoThang = {
                labels: LabelTongDoanhThuTheoThang,
                datasets: [{
                  label: '',
                  data: TongDoanhThuTheoThang,
                  backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                  ],
                  borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                  ],
                  borderWidth: 1,
                  fill: false
                }]
              };

              var dataTongDoanhThuTheoNgay = {
                labels: LabelTongDoanhThuTheoNgay,
                datasets: [{
                  label: '',
                  data: TongDoanhThuTheoNgay,
                  backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                  ],
                  borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                  ],
                  borderWidth: 1,
                  fill: false
                }]
              };
            

              var options = {
                scales: {
                  yAxes: [{
                    ticks: {
                      beginAtZero: true
                    }
                  }]
                },
                legend: {
                  display: false
                },
                elements: {
                  point: {
                    radius: 0
                  }
                }

              };
              


              // Get context with jQuery - using jQuery's .get() method.
              if ($("#barChart").length) {
                var barChartCanvas = $("#barChart").get(0).getContext("2d");
                // This will get the first returned node in the jQuery collection.
                var barChart = new Chart(barChartCanvas, {
                  type: 'bar',
                  data: dataTongDoanhThuTheoThang,
                  options: options
                });
              }


              if ($("#lineChart").length) {
                var lineChartCanvas = $("#lineChart").get(0).getContext("2d");
                var lineChart = new Chart(lineChartCanvas, {
                  type: 'line',
                  data: dataTongDoanhThuTheoNgay,
                  options: options
                });
              }


              if ($("#doughnutChart").length) {
                var doughnutChartCanvas = $("#doughnutChart").get(0).getContext("2d");
                var doughnutChart = new Chart(doughnutChartCanvas, {
                  type: 'doughnut',
                  data: doughnutData,
                  options: doughnutOptions
                });
              }

              if ($("#pieChart").length) {
                var pieChartCanvas = $("#pieChart").get(0).getContext("2d");
                var pieChart = new Chart(pieChartCanvas, {
                  type: 'pie',
                  data: pieData,
                  options: pieOptions
                });
              }

            });
          </script>