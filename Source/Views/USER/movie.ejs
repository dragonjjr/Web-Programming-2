<section class="w3l-grids">
	<div class="grids-main py-5">
		<div class="container py-lg-3">
			<div class="headerhny-title">
				<div class="w3l-title-grids">
					<div class="headerhny">
						<h1 class="hny-title"
							style="color:#BD034D; text-transform: uppercase; font-weight: bold; margin-top: 2rem;">
							Now showing</h3>
					</div>
				</div>
			</div>
			<div class="w3l-populohny-grids">
				<% var id=1; for(var item of movies){ %>
					<div class="item vhny-grid">
						<div class="box16">
							<a href="#small-dialog-popular<%- id %>" class="popup-with-zoom-anim play-view1">
								<figure>
									<img class="img-fluid" src="<%- item.PosterImage %>" alt="">
								</figure>
								<span class="fa fa-play video-icon" aria-hidden="true"></span>
							</a>
							<div id="small-dialog-popular<%- id %>" class="zoom-anim-dialog mfp-hide">
								<iframe src="<%- item.Trailer %>" allow="autoplay; fullscreen"
									allowfullscreen=""></iframe>
							</div>
							<div class="box-content">
								<h3 class="title">
									<%- item.Name %>
								</h3>
								<div class="post">
									<button type="button" class="btn btn-1"
										onclick="window.location.href='/movie/detail?id=<%= item.id %>'">See
										Detail</button>
									<button type="button" class="btn btn-1"
										onclick="window.location.href='/booking?id=<%= item.id %>'">Buy ticket</button>
								</div>
							</div>
						</div>
					</div>
					<% id++; } %>


			</div>
